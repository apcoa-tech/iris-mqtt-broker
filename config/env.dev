# Development Environment Configuration
# DEV has DUAL MQTT brokers for redundancy

ENVIRONMENT=dev
RESOURCE_GROUP=iot-dev
STORAGE_ACCOUNT=irisstdev001

# Dual broker configuration
DEPLOY_DUAL_BROKERS=true

# MQTT Broker 1 Configuration
FILE_SHARE_CONFIG_1=iris-dev-mqtt-1-config
CONTAINER_GROUP_1=iris-dev-mqtt-1
MQTT_1_FQDN=iris-dev-mqtt-1.westeurope.azurecontainer.io

# MQTT Broker 2 Configuration
FILE_SHARE_CONFIG_2=iris-dev-mqtt-2-config
CONTAINER_GROUP_2=iris-dev-mqtt-2
MQTT_2_FQDN=iris-dev-mqtt-2.westeurope.azurecontainer.io

# Shared resources
FILE_SHARE_CERTS=iris-dev-mqtt-certs
FILE_SHARE_BRIDGE_CERTS=iris-dev-mqtt-bridge-certs
CONTAINER_NAME=mosquitto

# Container Registry
ACR_NAME=irisacrdev001
ACR_LOGIN_SERVER=irisacrdev001.azurecr.io
IMAGE_NAME=mosquitto
IMAGE_TAG=latest

# Bridge to Production
BRIDGE_REMOTE_ADDRESS=3.121.198.76:8883
BRIDGE_USERNAME=logforwarder

# Peer Bridge Configuration (mqtt-1 <-> mqtt-2)
PEER_MQTT_1_ADDRESS=iris-dev-mqtt-1.westeurope.azurecontainer.io:8883
PEER_MQTT_2_ADDRESS=iris-dev-mqtt-2.westeurope.azurecontainer.io:8883
PEER_USERNAME=peerbridge

# Local Users
LOCAL_USERS=deviceuser,adminuser,peerbridge
